{
  "name": "copilot-browser-bridge-vscode",
  "displayName": "Copilot Browser Bridge",
  "description": "ブラウザのページ内容をCopilot/ローカルLLMで解析・対話",
  "version": "0.1.0",
  "publisher": "local",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copilotBrowserBridge.startServer",
        "title": "Copilot Browser Bridge: Start Server"
      },
      {
        "command": "copilotBrowserBridge.stopServer",
        "title": "Copilot Browser Bridge: Stop Server"
      }
    ],
    "configuration": {
      "title": "Copilot Browser Bridge",
      "properties": {
        "copilotBrowserBridge.serverPort": {
          "type": "number",
          "default": 3210,
          "description": "Port for the localhost server"
        },
        "copilotBrowserBridge.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start server on VS Code startup"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.90.0",
    "typescript": "^5.7.0"
  }
}
